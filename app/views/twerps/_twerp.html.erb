<div id="<%= dom_id twerp %>">
  <p>
    <strong>Name:</strong>
    <%= twerp.name %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= twerp.content.upcase %>
  </p>


<p>
    <strong>Most recently Twerped:</strong>
    <% allTwerp = Twerp.all %>
    <% last = Twerp.last %>
    <%= last.content %> 
      
  </p>

  <p>
    <strong>Created:</strong>
    <%= twerp.created_at %>
  </p>


  <p>
    <strong>Updated:</strong>
    <%= twerp.updated_at %>
  </p>
</div>
